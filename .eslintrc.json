{
  "root": true,
  "extends": [
    "standard-with-typescript",
    "standard-jsx",
    "plugin:import/typescript",
    "prettier"
  ],
  "plugins": ["import"],
  "rules": {
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ],
    "import/order": [
      "error",
      {
        "alphabetize": { "order": "asc" }
      }
    ],
    "react/jsx-key": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/sort-type-union-intersection-members": "error"
  }
}
